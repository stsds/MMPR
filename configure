#!/bin/bash

##########################################################################
# Copyright (c) 2023, King Abdullah University of Science and Technology
# All rights reserved.
# MMPR is an R package provided by the STSDS group at KAUST
##########################################################################


COMPILE_FLAGS="-fPIC"

if [[ "$OSTYPE" == "darwin"* ]]; then
  ABSOLUE_PATH=$([[ $1 == /* ]] && echo "$1" || echo "$PWD/${1#./}")
  COMPILE_FLAGS="-fPIC -Wno-unused-command-line-argument -Wno-absolute-value -Wno-deprecated-non-prototype"
else
  ABSOLUE_PATH=$(dirname $(realpath "$0"))
fi

BUILDING_EXAMPLES="OFF"
BUILDING_TESTS="OFF"
INSTALL_PATH="/usr/local"
VERBOSE=OFF
TEST_PATH="${ABSOLUE_PATH}/tests/test-files"
CONFIG_PATH="${ABSOLUE_PATH}/config"
echo ${ABSOLUE_PATH}

rm -rf bin/
mkdir bin/
cmake -DCMAKE_BUILD_TYPE=RELEASE \
  -DCMAKE_EXPORT_COMPILE_COMMANDS=ON \
  -DMPR_BUILD_TESTS=$BUILDING_TESTS \
  -DMPR_BUILD_EXAMPLES=$BUILDING_EXAMPLES \
  -DCMAKE_INSTALL_PREFIX=$INSTALL_PATH \
  -DCMAKE_TEST_PREFIX="$TEST_PATH" \
  -DCMAKE_CONFIG_PREFIX="$CONFIG_PATH" \
  -DCMAKE_VERBOSE_MAKEFILE:BOOL=$VERBOSE \
  -H"${ABSOLUE_PATH}" \
  -B"${ABSOLUE_PATH}/bin" \
  -DRUNNING_CPP=OFF \
  -DUSE_CUDA=OFF \
  -DBUILD_SHARED_LIBS=OFF \
  -DCMAKE_CXX_FLAGS_DEBUG="$COMPILE_FLAGS"\
  -DCMAKE_CXX_FLAGS_RELEASE="$COMPILE_FLAGS"

cd bin/
make clean
make all -j

if [[ "$OSTYPE" == "darwin"* ]]; then
  cp "${ABSOLUE_PATH}/bin/src/libmpr.dylib" "${ABSOLUE_PATH}/src/MMPR.so" || echo "Failed: libmpr.dylib -> src"
else
  cp "${ABSOLUE_PATH}/bin/src/libmpr.so" "${ABSOLUE_PATH}/src/MMPR.so" || echo "Failed: libmpr.so -> src"
fi

rm -rf "${ABSOLUE_PATH}/bin/"
