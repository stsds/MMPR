#!/bin/bash

ABSOLUE_PATH=$(dirname $(realpath "$0"))
BUILDING_EXAMPLES="OFF"
BUILDING_TESTS="OFF"
INSTALL_PATH="/usr/local"
VERBOSE=OFF
TEST_PATH="${ABSOLUE_PATH}/tests/test-files"
CONFIG_PATH="${ABSOLUE_PATH}/config"
echo ${ABSOLUE_PATH}

rm -rf bin/
mkdir bin/
cmake -DCMAKE_BUILD_TYPE=RELEASE \
  -DCMAKE_EXPORT_COMPILE_COMMANDS=ON \
  -DMPR_BUILD_TESTS=$BUILDING_TESTS \
  -DMPR_BUILD_EXAMPLES=$BUILDING_EXAMPLES \
  -DCMAKE_INSTALL_PREFIX=$INSTALL_PATH \
  -DCMAKE_TEST_PREFIX="$TEST_PATH" \
  -DCMAKE_CONFIG_PREFIX="$CONFIG_PATH" \
  -DCMAKE_VERBOSE_MAKEFILE:BOOL=$VERBOSE \
  -H"${ABSOLUE_PATH}" \
  -B"${ABSOLUE_PATH}/bin" \
  -DRUNNING_CPP=OFF \
  -DUSE_CUDA=ON \
  -DBUILD_SHARED_LIBS=OFF \
  -DCMAKE_CXX_FLAGS_DEBUG="-fPIC" \
  -DCMAKE_CXX_FLAGS_RELEASE="-fPIC"

cd bin/
make clean
make all -j

cp "${ABSOLUE_PATH}/bin/src/libmpr.so" "${ABSOLUE_PATH}/src/MMPR.so" || echo "Failed: libmpr.so -> src"
#rm -rf "${ABSOLUE_PATH}/inst/deps/"
#mkdir "${ABSOLUE_PATH}/inst/deps/"
#find "${ABSOLUE_PATH}/bin/_deps/" -type f -name "*.a" -print0 | xargs -0 cp -t "${ABSOLUE_PATH}/inst/deps/"
